{
    "variables": {
      "build_name": "cloudstack_systemvm_template"
    },
    "builders":
    [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Debian",
            "iso_url": "http://cdimage.debian.org/cdimage/archive/9.0.0/i386/iso-cd/debian-9.0.0-i386-netinst.iso",
            "iso_checksum": "4fb8c9fff36ac7b7d022dbbe8ed5d7b8",
            "iso_checksum_type": "md5",
            "output_directory": "packer_output",
            "ssh_wait_timeout": "30s",
            "shutdown_command": "/sbin/shutdown -hP now",
            "disk_size": 20480,
            "headless": "true",
            "http_directory": "httpdir",
            "http_port_min": 10082,
            "http_port_max": 10089,
            "ssh_host_port_min": 2222,
            "ssh_host_port_max": 2229,
            "ssh_username": "root",
            "ssh_password": "password",
            "ssh_port": 22,
            "ssh_wait_timeout": "90m",
            "vm_name": "cloudstack-systemvm",
            "boot_wait": "15s",
            "boot_command":
            [
                "<esc><wait5>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed/debian9.preseed ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "keyboard-configuration/xkb-keymap=us ",
                "netcfg/get_hostname=cloudstack-systemvm ",
                "netcfg/get_domain=cloudstack.apache.org ",
                "fb=false debconf/frontend=noninteractive ",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "<enter>"
            ],
            "vboxmanage": [
              ["modifyvm", "{{.Name}}", "--memory", "256"],
              ["modifyvm", "{{.Name}}", "--cpus", "1"]
            ]
        }
    ],
    "provisioners":
    [
        {
            "type": "file",
            "source": "files/ipsec.conf",
            "destination": "/tmp/ipsec.conf"
        },
        {
            "type": "file",
            "source": "files/ipsec.secrets",
            "destination": "/tmp/ipsec.secrets"
        },
        {
            "type": "file",
            "source": "files/l2tp.conf",
            "destination": "/tmp/l2tp.conf"
        },
        {
            "type": "file",
            "source": "files/cloud-early-config",
            "destination": "/tmp/cloud-early-config"
        },
        {
            "type": "file",
            "source": "files/patchsystemvm.sh",
            "destination": "/tmp/patchsystemvm.sh"
        },
        {
            "type": "shell",
            "scripts":
            [
                "scripts/build_time.sh",
                "scripts/disk_size.sh",
                "scripts/apt_get.sh",
                "scripts/grub.sh",
                "scripts/locale.sh",
                "scripts/login.sh",
                "scripts/networking.sh",
                "scripts/acpid.sh",
                "scripts/packages.sh",
                "scripts/conntrack.sh",
                "scripts/service_config.sh",
                "scripts/cleanup.sh",
                "scripts/tmout.sh",
                "scripts/strongswan.sh"
            ],
            "execute_command": "bash '{{.Path}}'"
        }
    ],
    "post-processors":
    [
        {
            "type": "shell-local",
            "scripts":
            [
                "scripts/zerodisk.sh",
                "scripts/compress.sh"
            ]
        }
    ]
}
